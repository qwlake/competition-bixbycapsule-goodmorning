layout-macro-def (TimerCard) {
  params {
    param (timer) {
      type (Timer)
      min (Required) max (One)
    }
  }

  content {
    compound-card {
      content {
        single-line {
          text {
            value {
              template (
                "#{value(timer.timerTime)}"
              )
            }
            style (Title_L)
          }
        }
      }
    }
  }
}
